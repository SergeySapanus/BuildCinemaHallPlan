@using WSVistaWebClientTest.WebUI.Infrastructure.Concrete
@model IEnumerable<MenuItemType>

@{
    var buttons = "btn btn-block btn-default btn-lg";
}

@foreach (var link in Model)
{
    @Html.RouteLink(link.ToString(),new
{
    controller = "Default",
    action = "Index",
    menuItem = link
},new
{
    @class = buttons + (link == ViewBag.SelectedLink ? " btn-primary" : string.Empty)
})
}